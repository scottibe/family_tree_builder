<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <h2><%= pluralize(@person.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div><%= f.text_field :name, :placeholder => "Family Name" %></div>
  <div><%= f.text_field :given_name, :placeholder => "Given Name" %></div>
  <div><%= f.select :year_of_birth, (1670..1900), include_blank: "Select Year of Birth" %></div>
  <div><%= f.select :year_of_death, (1800..Time.zone.now.year), include_blank: "Select Year of Death" %></div>
  <div><%= f.text_area :comments, :placeholder => "Comments" %></div>

      <br>

  <h2>Select the Neighborhoods where your Person Lived</h2>
    <div><%= f.collection_check_boxes :neighborhood_ids, Neighborhood.all, :id, :display %></div>

      <br>

  <h2>Or Create a New Neighborhood (You may create additional neighborhoods later)</h2>
    <%= f.fields_for :neighborhoods do |neighborhood_fields| %>
      <div><%= neighborhood_fields.text_field :name, :placeholder => "Name" %></div>
      <div><%= neighborhood_fields.collection_select :borough_id, Borough.all, :id, :name, include_blank: "Select Borough" %></div>
      <div><%= neighborhood_fields.text_area :comments, :placeholder => "Comments" %></div>
    <% end %>

  <div><%= f.submit %>
<% end %>
